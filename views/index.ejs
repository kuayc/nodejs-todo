<html>
  <head>
    <title>ToDo</title>
    <link
      href="https://fonts.googleapis.com/css?family=Lato:100"
      rel="stylesheet"
    />
    <link href="/styles.css" rel="stylesheet" />
  </head>
  <body>
    <div class="container">
      <h2>Major tasks in life</h2>

      <form action="/addtask" method="POST">
        <input type="text" name="newtask" placeholder="add new task" />
        <button>Add tasks</button>

        <h2>Added tasks</h2>

        <% for( let i = 0; i < task.length; i++){ %>
        <li>
          <input type="checkbox" name="check" value="<%= task[i] %>" /> <%=
          task[i] %>
        </li>
        <% } %>

        <button formaction="/removetask" type="submit" id="top">Done</button>
      </form>
      <h2>Completed tasks</h2>
      <% for(let i = 0; i < complete.length; i++){ %>
      <li><input type="checkbox" checked /><%= complete[i] %></li>
      <% } %>
    </div>
  </body>
</html>
